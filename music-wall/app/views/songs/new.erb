<h1>Post a Song</h1>
</hr>

<% if @song.errors.any? %>
  <div>
    <strong>There was an error with posting your song</strong>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song.title %>">
  </div>
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @song.artist %>">
  </div>

  <div>
    <label>Album Cover URL:</label>
    <input type="text" name="url" value="<%=  @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
